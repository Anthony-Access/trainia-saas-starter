# ============================================================================
# Clerk Authentication
# ============================================================================
# Get these keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxx

# ============================================================================
# Supabase
# ============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# CRITICAL: Keep this secret! Only use server-side. Never expose to client.
# This key bypasses Row Level Security policies.
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ============================================================================
# Stripe (Payment Processing)
# ============================================================================
# Test keys (for development)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Webhook secret for Stripe events
# Get from: https://dashboard.stripe.com/test/webhooks
# After creating a webhook endpoint, copy the signing secret
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Production/Live keys (only set these in production environment)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY_LIVE=sk_live_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_xxxxx

# ============================================================================
# Application URL (for redirects and webhooks)
# ============================================================================
# For local development, leave empty (defaults to localhost:3000)
# For production, set to your domain (e.g., https://yourdomain.com)
NEXT_PUBLIC_SITE_URL=

# Vercel automatically sets this in production
# NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. Never commit this file with real values to version control
# 2. Use different keys for development and production
# 3. Rotate keys regularly (especially after team member changes)
# 4. Service role keys should only be used server-side
# 5. Use environment variables in your deployment platform (Vercel, etc.)
# 6. For local development, copy this to .env.local and fill in real values
